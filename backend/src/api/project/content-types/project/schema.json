    "category": {
      "type": "enumeration",
      "enum": [
        "Corporate",
        "Storytelling",
        "Architecture",
        "Weddings",
        "Design"
      ],
      "required": true,
      "default": "Corporate"
    },
    "heading": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "preview": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "images": {
      "type": "component",
      "repeatable": true,
      "component": "general.images"
    },
    "teaser": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    }
  }
}
